<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>

<div style="height: 100vh;">
  <!DOCTYPE html>
  <html lang="en">
    <head>
      <title>Contact V15</title>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <!-- <link rel="stylesheet" type="text/css" href="css/util.css"> -->
      <link
        href="https://fonts.googleapis.com/css?family=Montserrat&display=swap"
        rel="stylesheet"
      />
      <link rel="stylesheet" type="text/css" href="/stylesheets/addBook.css" />
    </head>
    <body>
      <div
        class="container-contact100"
        style="background: #6e3b3b; 
                margin-top: 88px;
        background: -webkit-linear-gradient(to right,#6e3b3b, #aa7070);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #c19191, #f0e9e9); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        "
      >
        <div class="wrap-contact100">
          <div
            class="contact100-form-title"
            style="background-image: url(/images/bg-01.jpg);"
          >
            <span class="contact100-form-title-1">
              Add a book.
            </span>

            <span class="contact100-form-title-2">
              Fill in the details of the book that you would like to add.
            </span>
          </div>

          <form class="contact100-form validate-form">
            <div
              class="wrap-input100 validate-input"
              data-validate="Title is required"
            >
              <span class="label-input100">Title:</span>
              <select tabIndex="-1" name="book[title]" id="one" required>
                <option value="" name="" selected="selected" disabled="disabled">
                  Choose Option
                </option>

                <% book.forEach(element => { %>
                  <option name=""><%= element.title %></option>
                <% }); %>
              </select>

              <span class="focus-input100"></span>
            </div>

            <div
              class="wrap-input100 "
              data-validate="Quality is required"
            >
              <span class="label-input100">Title:</span>
              <select tabIndex="-1" name="book[quality]" id="quality" required>
                <option value="" name="" selected="selected" disabled="disabled">
                  Rate your Book Quality out of 5
                </option>

                <option  >1</option>
                <option >2</option>
                <option >3</option>
                <option >4</option>
                <option >5</option>
                
              </select>

              
            </div>

            <div disable>
              <input
                id="price",
                class="input100"
                type="number"
                name="book[price]"
                value=,
                placeholder="Enter price in rupees"
                hidden
              />
              <span class="focus-input100"></span>
            </div>

            <div disable>
              <input
                class="input100"
                type="number"
                name="book[seller]"
                placeholder="Seller"
                hidden
              />
              <span class="focus-input100"></span>
            </div>
            <%var x=0,y=0;%>
            <%for(var i=0;i<book.length;i++){%>
            <%if(book[i].title==document.getElementById('one').textContent){%>
              <%x=book[i].pages;y=book[i].copies;break;}}%>

            

            <div class="container-contact100-form-btn">
              <button type="button" class="contact100-form-btn"  onclick="predict(<%= x%>, <%= y%> )">
                <%= x%>, <%= y%>
                <span>
                  Submit
                  <i
                    class="fa fa-long-arrow-right m-l-7"
                    aria-hidden="true"
                  ></i>
                </span>
              </button>
            </div>
            <div class="">

            <h3 class="" id="predictedPrize">23</h3>
            </div>
          </form>
        </div>
      </div>

      <div id="dropDownSelect1"></div>

      <script src="/javascripts/addBooks.js"></script>
      <script>
      var quality = document.getElementById('quality').value;

function predict(pages,copies){
  console.log(pages+" "+copies+" "+quality)
    pages = (pages/1320) * 3;
    copies = (copies/100000000) * 2;
    $("#price").value = (pages+copies+quality);
    $("#predictedPrize").textContent = (pages+copies+quality) + "per-day"; 
 };
      </script>
    </body>
  </html>
  
  </div>
  <%- include('includes/footer.ejs') %>
  <%- include('includes/end.ejs') %>
