<%- include('includes/head.ejs') %>

<div style="height: 100vh;">
  <!DOCTYPE html>
  <html lang="en">
    <head>
      <title>Contact V15</title>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <!-- <link rel="stylesheet" type="text/css" href="css/util.css"> -->
      <link
        href="https://fonts.googleapis.com/css?family=Montserrat&display=swap"
        rel="stylesheet"
      />
      <link rel="stylesheet" type="text/css" href="/stylesheets/addBook.css" />
    </head>
    <body>
      <div
        class="container-contact100"
        style="background: #6e3b3b; 
                margin-top: 88px;
        background: -webkit-linear-gradient(to right,#6e3b3b, #aa7070);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #c19191, #f0e9e9); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        "
      >
        <div class="wrap-contact100">
          <div
            class="contact100-form-title"
            style="background-image: url(/images/bg-01.jpg);"
          >
            <span class="contact100-form-title-1">
              Add a book.
            </span>

            <span class="contact100-form-title-2">
              Fill in the details of the book that you would like to add.
            </span>
          </div>

          <form class="contact100-form validate-form">
            <div
              class="wrap-input100 validate-input"
              data-validate="Title is required"
            >
              <span class="label-input100">Title:</span>
              <input
                class="input100"
                type="text"
                name="book[name]"
                placeholder="Enter the title"
              />
              <span class="focus-input100"></span>
            </div>
            <!-- Message -->

            <div
              class="wrap-input100 validate-input"
              data-validate="Author is required"
            >
              <span class="label-input100">Author:</span>
              <input
                class="input100"
                type="text"
                name="book[author]"
                placeholder="Enter the name of the author"
              />
              <span class="focus-input100"></span>
            </div>

            <div
              class="wrap-input100 validate-input"
              data-validate=" Language name is required"
            >
              <span class="label-input100">Language:</span>
              <input
                class="input100"
                type="text"
                name="book[language]"
                placeholder="Enter language "
              />
              <span class="focus-input100"></span>
            </div>

            <div
              class="wrap-input100 validate-input"
              data-validate="Description is required"
            >
              <span class="label-input100">Description:</span>
              <textarea
                class="input100"
                name="book[description]"
                placeholder="Add a short description for your book"
              ></textarea>
              <span class="focus-input100"></span>
            </div>

            <div
              class="wrap-input100 validate-input"
              data-validate="Price is required"
            >
              <span class="label-input100">Price:</span>
              <input
                class="input100"
                type="number"
                name="book[price]"
                placeholder="Enter price in rupees"
              />
              <span class="focus-input100"></span>
            </div>
            <div class="container-contact100-form-btn">
              <button class="contact100-form-btn">
                <span>
                  Submit
                  <i
                    class="fa fa-long-arrow-right m-l-7"
                    aria-hidden="true"
                  ></i>
                </span>
              </button>
            </div>
          </form>
        </div>
      </div>

      <div id="dropDownSelect1"></div>

      <script src="/javascripts/addBooks.js"></script>
    </body>
  </html>

  <%- include('includes/end.ejs') %>
</div>
